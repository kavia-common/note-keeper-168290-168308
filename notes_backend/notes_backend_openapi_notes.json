{
  "openapi": "3.0.3",
  "info": {
    "title": "Notes API - Ocean Professional",
    "version": "v1",
    "description": "RESTful CRUD API for managing notes with Ocean Professional response envelope."
  },
  "paths": {
    "/": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Healthy"
          }
        }
      }
    },
    "/api/notes/": {
      "get": {
        "tags": ["Notes"],
        "summary": "List notes",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "page_size", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": {
            "description": "List of notes"
          }
        }
      },
      "post": {
        "tags": ["Notes"],
        "summary": "Create note",
        "requestBody": { "required": true },
        "responses": {
          "201": {
            "description": "Created note"
          }
        }
      }
    },
    "/api/notes/{note_id}": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get note",
        "parameters": [{ "in": "path", "name": "note_id", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Note" },
          "404": { "description": "Not found" }
        }
      },
      "patch": {
        "tags": ["Notes"],
        "summary": "Update note",
        "parameters": [{ "in": "path", "name": "note_id", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Updated note" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "tags": ["Notes"],
        "summary": "Delete note",
        "parameters": [{ "in": "path", "name": "note_id", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "204": { "description": "Deleted" },
          "404": { "description": "Not found" }
        }
      }
    }
  }
}
